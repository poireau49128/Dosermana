@model Dosermana.WebUI.Models.EditUserViewModel

    @{
        ViewBag.Title = "Админ панель: редактирование пользователя";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="panel">
        <div class="panel-heading">
            <h3>Редактирование пользователя @Model.Name</h3>
        </div>

        @using (Html.BeginForm())
        {
            <div class="panel-body">
                @Html.HiddenFor(m => m.Id)
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })


                <h4>Коэффициенты цены по категориям:</h4>
                @for (int i = 0; i < Model.Categories.Count; i++)
                {
                    @Html.HiddenFor(m => m.Categories[i].Id)
                    @Html.HiddenFor(m => m.Categories[i].CategoryName)
                    <div class="form-group">
                        <label>@Model.Categories[i].CategoryName</label>
                        @Html.HiddenFor(m => m.CategoryCoefficients[i].Category_Id)
                        @Html.TextBoxFor(m => m.CategoryCoefficients[i].Coefficient, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                }
            </div>

            <div class="panel-footer">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                @Html.ActionLink("Отменить изменения и вернуться к списку", "Users", null, new { @class = "btn btn-default" })
            </div>
         }
    </div>