@model IEnumerable<Dosermana.Domain.Entities.Order>

@{
    ViewBag.Title = "Админ панель: список заказов";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список заказов</h3>
    </div>
    <div class="panel-footer">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>Номер заказа</th>
                <th>Имя пользователя</th>
                <th>Продукт</th>
                <th>Кол-во</th>
                <th class="text-right">Общая стоимость</th>
                <th class="text-right">Дата заказа</th>
                <th>Адрес</th>
                <th class="text-right">Статус заказа</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.OrderId</td>
                    <td>@item.UserEmail</td>
                    <td class="text-center">@item.ProductId</td>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-right">@item.Summary.ToString("0.00 руб")</td>
                    <td class="text-right">@item.OrderDate</td>
                    <td class="text-right">@item.Address</td>
                    <td class="text-right">@item.Status</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-default">
                            @Html.ActionLink("Изменить", "EditOrder", new { item.OrderId })
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>

</div>